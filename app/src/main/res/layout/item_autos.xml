<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/txtMarcaModelo"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:foregroundGravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/secundario"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backgroud_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="27dp"
                android:layout_height="162dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenAuto"
                    android:layout_width="192dp"
                    android:layout_height="109dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPrecio"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:foregroundGravity="center"
                        android:text="$0.00"
                        android:textAlignment="textEnd"
                        android:textColor="@color/principal"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDia"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:foregroundGravity="center"
                        android:text="/dia"
                        android:textAlignment="textStart"
                        android:textColor="@color/secundario"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoria"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="CategorÃ­a"
                    android:textColor="@color/secundario"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCategoria"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/principal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/capacidad"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Capacidad"
                    android:textColor="@color/secundario"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCapacidad"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/principal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/potencia"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Potencia"
                    android:textColor="@color/secundario"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPotencia"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/principal"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>