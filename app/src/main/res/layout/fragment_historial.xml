<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentHistorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Mis Ãºltimas reservas"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Space
            android:id="@+id/espaciador"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TableLayout
            android:id="@+id/tlReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Contenido de la tabla -->
        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Mis alquileres finalizados"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Space
            android:id="@+id/espaciador2"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TableLayout
            android:id="@+id/tlAlquileres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Contenido de la tabla -->
        </TableLayout>
    </LinearLayout>
</ScrollView>


